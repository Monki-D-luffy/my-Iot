// tsconfig.app.json 核心拼图
{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true, // 开启所有严格类型检查
    "noImplicitAny": true, // 禁止隐式的 any 类型
    "strictNullChecks": true, // 严格检查 null 和 undefined
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Bundler"
  }
}